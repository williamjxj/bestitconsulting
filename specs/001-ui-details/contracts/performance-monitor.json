{
  "openapi": "3.0.0",
  "info": {
    "title": "Performance Monitor API",
    "version": "1.0.0",
    "description": "API for monitoring animation performance and metrics"
  },
  "paths": {
    "/api/performance/metrics": {
      "get": {
        "summary": "Get performance metrics",
        "responses": {
          "200": {
            "description": "Current performance metrics",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PerformanceMetrics"
                }
              }
            }
          }
        }
      }
    },
    "/api/performance/thresholds": {
      "get": {
        "summary": "Get performance thresholds",
        "responses": {
          "200": {
            "description": "Performance thresholds configuration",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PerformanceThresholds"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update performance thresholds",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PerformanceThresholds"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Thresholds updated successfully"
          }
        }
      }
    },
    "/api/performance/optimize": {
      "post": {
        "summary": "Optimize performance",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "targetFPS": {
                    "type": "number"
                  },
                  "memoryLimit": {
                    "type": "number"
                  },
                  "deviceType": {
                    "type": "string",
                    "enum": ["desktop", "tablet", "mobile"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Performance optimization applied"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PerformanceMetrics": {
        "type": "object",
        "properties": {
          "fps": {
            "type": "number"
          },
          "memoryUsage": {
            "type": "number"
          },
          "cpuUsage": {
            "type": "number"
          },
          "gpuUsage": {
            "type": "number"
          },
          "frameDrops": {
            "type": "number"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["fps", "memoryUsage", "cpuUsage", "gpuUsage", "frameDrops", "timestamp"]
      },
      "PerformanceThresholds": {
        "type": "object",
        "properties": {
          "fps": {
            "type": "object",
            "properties": {
              "warning": {
                "type": "number"
              },
              "critical": {
                "type": "number"
              }
            }
          },
          "memoryUsage": {
            "type": "object",
            "properties": {
              "warning": {
                "type": "number"
              },
              "critical": {
                "type": "number"
              }
            }
          },
          "cpuUsage": {
            "type": "object",
            "properties": {
              "warning": {
                "type": "number"
              },
              "critical": {
                "type": "number"
              }
            }
          }
        }
      }
    }
  }
}
